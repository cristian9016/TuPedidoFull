<Page
    x:Class="TuPedido.SignUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TuPedido"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#f2f2f2" Padding="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.525*"/>
            <ColumnDefinition Width="4.5*"/>
            <ColumnDefinition Width="2.525*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Image Grid.ColumnSpan="3" Source="Assets/Logo1.png"/>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Center">
            <TextBox PlaceholderText="User" Margin="0,0,0,10"/>
            <TextBox PlaceholderText="Password" Margin="0,0,0,10"/>
            <TextBox PlaceholderText="E-mail"/>
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="2" Content="SignUp" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
    </Grid>
</Page>
